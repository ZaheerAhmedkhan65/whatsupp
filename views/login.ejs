<%- include('partials/_header', { title: 'Log In' }) %>

  <div class="container-fluid d-flex  flex-column justify-content-center bg-primary vh-100">
    <div class="row flex-grow-1 mt-5">
       <div class="col-lg-6">
        <h1 class="text-center">Welcome to the Whatsupp</h1>        
        <p class="text-center">Log in to your account and start chatting with your friends.</p>
        <div class="text-center"> 
          <img src="/img/Whatsupp.png" alt="WhatsApp Image" class="img-fluid" width="40%">
        </div>
       </div>
       <div class="col-lg-6">
      <form action="/auth/login" method="POST" class="col-lg-6">
        <h2 class="fs-4 lead fw-bold">Log In</h2> 
         <label for="username" class="form-label">UserName</label>  
         <input type="text" id="username" name="username" class="form-control" required>
      
         <label for="password" class="form-label">Password</label>  
         <input type="password" id="password" name="password" class="form-control" required>
         
         <button type="submit" class="btn btn-success my-3">Log In</button>
       </form>
       <a href="/auth/signup" class="text-decoration-none text-white">Don't have an account? Sign Up</a>
      </div>  
    </div>
  </div>
<%- include('partials/_footer') %>